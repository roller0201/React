{
  "executable": "Numerology",
  "splashscreen": {
    "imageFile": "./Assets/Adiidev 1920x1080_color_white.png"
  },
  "name": "Numerology",
  "author": "Adrian Krysiak & Jacek Wiśniewski",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.Numerology.app",
    "productName": "Numerology",
    "copyright": "Copyright © 2020",
    "buildVersion": "1.0.2",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  },
  "nsis": {
    "oneClick": false,
    "multiLanguageInstaller": true,
    "allowToChangeInstallationDirectory": true
  }
}